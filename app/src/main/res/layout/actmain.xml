<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="map90.iii.org.tw.tdee.Actmain"
    android:weightSum="1">
   <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TDEE計算"
        android:textSize="35dp"
        android:background="#3399EE"
        android:textAlignment="center"/>

     </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="性別"
            android:textSize="30dp"
            android:layout_weight="2"/>
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/rdgSex"
            android:layout_weight="1">
            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/rdbMale"
                android:text="Male"
                android:textSize="25dp"
                android:checked="true"
                 />
            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/rdbFemale"
                android:text="Female"
                android:textSize="25dp"
                />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="年紀"
            android:textSize="30dp"/>
         <EditText
             android:id="@+id/txtAge"
           android:layout_weight="1"
           android:layout_width="match_parent"
            android:layout_height="match_parent"
            />



    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="體重"
            android:textSize="30dp"/>
        <EditText
            android:id="@+id/txtWeight"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="KG"
            />
     </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="身高"
            android:textSize="30dp"/>
        <EditText
            android:id="@+id/txtHeight"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="CM"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="活動強度"
            android:textSize="30dp"/>

        <Spinner
            android:id="@+id/spnActivity"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/activity_list"
            android:spinnerMode="dialog"
            android:prompt="@string/activity_list_prompt"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="運動目標"
            android:textSize="30dp"/>

        <Spinner
            android:id="@+id/spnGoal"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/goal_list"
            android:spinnerMode="dialog"
            android:prompt="@string/goal_list_prompt"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="開始計算"
    android:textSize="30dp"
    android:id="@+id/btnCalculate"
    android:background="#66EEAA"
    android:layout_marginBottom="10dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="體脂參考"
        android:textSize="30dp"
        android:id="@+id/btnFat"
        android:background="#7788FF"/>
    </LinearLayout>

</LinearLayout>


